{
    "manifest_version": 2,
  
    "name": "PageSpeed Checker",
    "description": "Save time and check the  Google PageSpeed Insights score by just clicking on the extension icon.",
    "version": "1.0",
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "icons": { 
        "16": "16x16.png",
        "48": "48x48.png",
       "128": "128x128.png" 
    },
    "browser_action": {
     "default_icon": "128x128.png"
    },
    "permissions": [
     "activeTab",
     "tabs"
     ]
  }