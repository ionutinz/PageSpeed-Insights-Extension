{
    "manifest_version": 2,
  
    "name": "PageSpeed Checker",
    "description": "Save time and check the  Google PageSpeed Insights score by just clicking on the extension icon.",
    "version": "1.0",
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
  
    "browser_action": {
     "default_icon": "icon.png"
    //  "default_popup": "popup.html"
    },
    "permissions": [
     "activeTab",
     "tabs"
     ]
  }